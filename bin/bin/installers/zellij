#!/usr/bin/env bash
set -x

VERSION="0.38.2"
KERNEL_NAME=$(uname -s)
ARCH_NAME=$(uname -m)
TGZ_NAME=zellij-${ARCH_NAME}-unknown-linux-musl.tar.gz
URL="https://github.com/zellij-org/zellij/releases/download/v${VERSION}/${TGZ_NAME}"

rm -rf /tmp/zellij*
cd /tmp
curl -L -O ${URL}
tar -xzf ${TGZ_NAME}
cp zellij ${HOME}/.local/bin && rm ${TGZ_NAME}
